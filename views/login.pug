extends layout 

block title 
    | #{permission_requested} login page

block content
    if error
        article
            h4.error= error
    h1 VHS #{permission_requested} tool auth
    article
        header 
            | Sign in to #{permission_requested} access using your #[a(href='https://membership.vanhack.ca') Nomos] credentials
           
        form(action="/login/", method="POST")
            input#username(type="text", name="username", placeholder="Username or E-Mail address")
            input#password(type="password", name="password", placeholder="Password")
            input(type="submit", value="Login")
        footer
            | If you are having trouble logging in, or need to reset your password, visit #[a(href='https://membership.vanhack.ca') membership.vanhack.ca].
